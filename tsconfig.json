{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}